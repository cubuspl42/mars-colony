{
  "compilerOptions": {
    "strict": true,
    "module": "commonjs",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "target": "es6",
    "noImplicitAny": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "dist",
    "experimentalDecorators": true,
    "baseUrl": "..",
    "paths": {
      "*": [
        "node_modules/*",
        "src/types/*"
      ],
      "@common/*": [
        "common/src/*"
      ]
    }
  },
  "include": [
    "src/**/*"
  ]
}
